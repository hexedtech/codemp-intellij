<idea-plugin>
    <id>mp.code.ij</id>
	<name>CodeMP</name>
	<version>0.0.1</version>
    <vendor email="support@codemp.dev" url="https://code.mp">CodeMP</vendor>

    <description>A plugin for MultiPlayer code editing across different IDEs.</description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <group id="codemp" text="CodeMP" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
			<action id="codemp.connect" class="mp.code.ij.actions.ConnectAction" text="Connect..."/>
			<action id="codemp.disconnect" class="mp.code.ij.actions.DisconnectAction" text="Disconnect..."/>
			<group id="codemp.workspace" text="Workspace" popup="true">
				<action id="codemp.workspace.create" class="mp.code.ij.actions.workspace.WorkspaceCreateAction"
						text="Create Workspace"/>
				<action id="codemp.workspace.join" class="mp.code.ij.actions.workspace.WorkspaceAttachAction"
						text="Attach To Workspace"/>
				<action id="codemp.workspace.invite" class="mp.code.ij.actions.workspace.WorkspaceInviteAction"
						text="Invite To Workspace"/>
				<action id="codemp.workspace.delete" class="mp.code.ij.actions.workspace.WorkspaceDeleteAction"
						text="Delete Workspace"/>
				<action id="codemp.workspace.leave" class="mp.code.ij.actions.workspace.WorkspaceLeaveAction"
						text="Leave Workspace"/>
			</group>
			<group id="codemp.buffer" text="Buffer" popup="true">
				<action id="codemp.buffer.attach" class="mp.code.ij.actions.buffer.BufferAttachAction"
						text="Attach to Remote Buffer"/>
				<action id="codemp.buffer.detach" class="mp.code.ij.actions.buffer.BufferDetachAction"
						text="Detach from Remote Buffer"/>
				<action id="codemp.buffer.create" class="mp.code.ij.actions.buffer.BufferCreateAction"
						text="Create a New Empty Remote Buffer"/>
				<action id="codemp.buffer.delete" class="mp.code.ij.actions.buffer.BufferDeleteAction"
						text="Delete a Remote Buffer"/>
				<action id="codemp.buffer.sync" class="mp.code.ij.actions.buffer.BufferSyncAction"
						text="Sync Content of a Managed Buffer"/>
			</group>
        </group>
	</actions>

	<extensions defaultExtensionNs="com.intellij">
		<!--
		<virtualFileSystem
				id="codemp_vfs"
				key="codemp"
				physical="false"
				implementationClass="mp.code.ij.vfs.CodeMPFileSystem"/>
		<workspaceModel.fileIndexContributor implementation="mp.code.ij.vfs.CodeMPFileIndexContributor" />
		-->
		<notificationGroup id="CodeMP" displayType="BALLOON"/>
		<applicationService serviceImplementation="mp.code.ij.settings.CodeMPSettings"/>
		<applicationConfigurable
			parentId="tools"
			instance="mp.code.ij.settings.CodeMPSettingsConfigurable"
			id="mp.code.ij.settings.CodeMPSettingsConfigurable"
			displayName="CodeMP"/>
		<toolWindow
				id="CodeMP"
				factoryClass="mp.code.ij.ui.CodeMPWindowFactory"
				anchor="right"
				icon="/icons/codempToolWindow.svg"
				doNotActivateOnStart="false" />
	</extensions>
</idea-plugin>
